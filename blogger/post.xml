<b:widget id='Blog1' locked='false' title='Blog Posts' type='Blog'>
  <b:includable id='nextprev'>
    <nav>
      <ul class="pager">

        <b:if cond='data:newerPageUrl'>
          <li class="pager-prev">
            <a expr:href='data:newerPageUrl' expr:title='data:newerPageTitle'><data:newerPageTitle/></a>
          </li>
        </b:if>

        <b:if cond='data:olderPageUrl'>
          <li class="pager-next">
            <a expr:href='data:olderPageUrl' expr:title='data:olderPageTitle'><data:olderPageTitle/></a>
          </li>
        </b:if>

      </ul>
    </nav>
  </b:includable>

  <b:includable id='post' var='post'>
    <div class="blog-post">
      <div class="blog-post-title">
        <b:if cond='data:post.title'>
          <h2>
            <b:if cond='data:post.link'>
              <a expr:href='data:post.link'><data:post.title/></a>
            <b:else/>
              <b:if cond='data:post.url'>
                <b:if cond='data:blog.url != data:post.url'>
                  <a expr:href='data:post.url'><data:post.title/></a>
                <b:else/>
                  <data:post.title/>
                </b:if>
              <b:else/>
                <data:post.title/>
              </b:if>
            </b:if>
          </h2>
        </b:if>
      </div>

      <div class="blog-post-meta">
        <time class='published entry-date' expr:title='data:post.timestampISO8601'><data:post.dateHeader/></time>
      </div>

      <div class="blog-post-content">
        <data:post.body/>
      </div>

      <div class="blog-post-footer">
        <span><data:postLabelsLabel/></span>
        <b:loop values='data:post.labels' var='label'>
          <a expr:href='data:label.url' rel='tag'><data:label.name/></a><b:if cond='data:label.isLast != &quot;true&quot;'>,</b:if>
        </b:loop>
      </div>
    </div>
  </b:includable>

  <b:includable id='main' var='top'>

    <b:loop values='data:posts' var='post'>
			<b:include data='post' name='post'/>
			<b:if cond='data:blog.pageType == &quot;static_page&quot;'>
				<b:include data='post' name='comments'/>
			</b:if>
			<b:if cond='data:blog.pageType == &quot;item&quot;'>
				<b:include data='post' name='comments'/>
			</b:if>
    </b:loop>

    <b:include name='nextprev'/>

  </b:includable>
</b:widget>
